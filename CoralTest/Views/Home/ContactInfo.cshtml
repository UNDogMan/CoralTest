@model ContactInfoViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("ContactInfo", "Home", FormMethod.Post, new { id = "InfoForm" }))
{
<div class="row">
    <div class="col text-right">
        <div class="requared">
            @Html.LabelFor(m => m.Salutation)
            @Html.TextBoxFor(m => m.Salutation)
            @Html.ValidationMessageFor(m => m.Salutation)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName)
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
        <div>
            @Html.LabelFor(m => m.MiddleName)
            @Html.TextBoxFor(m => m.MiddleName)
            @Html.ValidationMessageFor(m => m.MiddleName)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.Company)
            @Html.TextBoxFor(m => m.Company)
            @Html.ValidationMessageFor(m => m.Company)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title)
        </div>
    </div>
    <div class="col text-right">
        <div class="requared">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.ConfirmEmail)
            @Html.TextBoxFor(m => m.ConfirmEmail)
            @Html.ValidationMessageFor(m => m.ConfirmEmail)
        </div>
        <div class="requared">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone)
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
        <div>
            @Html.LabelFor(m => m.Fax)
            @Html.TextBoxFor(m => m.Fax)
            @Html.ValidationMessageFor(m => m.Fax)
        </div>
        <div>
            @Html.LabelFor(m => m.Mobile)
            @Html.TextBoxFor(m => m.Mobile)
            @Html.ValidationMessageFor(m => m.Mobile)
        </div>
    </div>
</div>
<div class="row float-right mr-5">
    <div>
        <button class="btn btn-primary float-right" type="submit" value="Areas">Next</button>
    </div>
</div>
}
